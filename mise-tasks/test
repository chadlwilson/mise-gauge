#!/usr/bin/env bash
#MISE description="Run plugin tests - install and execute tool"
set -euo pipefail

mise plugin link --force gauge .
mise cache clear
mise install gauge@1.6.21

# Capture and display the output while also verifying it
output=$(mise exec "gauge@1.6.21" -- "gauge" --version)
echo "gauge output: $output"

if echo "$output" | grep -q 'Gauge version: 1.6.21'; then
    echo "✓ Tests passed"
else
    echo "✗ Test failed: expected version gauge@1.6.21"
    exit 1
fi
